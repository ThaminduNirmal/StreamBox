{
  "expo": {
    "name": "StreamBox",
    "slug": "StreamBox",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "streambox",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.streambox.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "StreamBox needs access to your photo library to set a profile picture.",
        "NSCameraUsageDescription": "StreamBox needs access to your camera to take a profile picture."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E50914",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "package": "com.streambox.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0A0E27",
          "dark": {
            "backgroundColor": "#0A0E27"
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "17a4b103-7fdc-4aba-924c-0b7e4a89b064"
      }
    }
  }
}
